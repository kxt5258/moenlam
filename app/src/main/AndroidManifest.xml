<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kinley_tshering.tangbi.moenlam">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PrayerListActivity"
            android:label="སྨོན་ལམ (Moenlam)"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrayerDetailActivity"
            android:label="@string/title_prayer_detail"
            android:parentActivityName=".PrayerListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kinley_tshering.tangbi.moenlam.PrayerListActivity" />
        </activity>
        <activity android:name=".HelpInfoActivity"
            android:label="About Moenlam App"></activity>
    </application>

</manifest>